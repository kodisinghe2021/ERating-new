<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">
    <!--   Single Card Layout-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_low">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--    Main linear layout   -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="390dp"
                    android:background="@color/gray_low"
                    android:orientation="vertical">

                    <!--   ROW 01 layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <!--Header text and type text Layout-->
                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/game_header_name"
                                android:layout_width="300dp"
                                android:layout_height="35dp"
                                android:layout_gravity="left"
                                android:paddingLeft="10dp"
                                android:text="Game Name"
                                android:textSize="25sp" />

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="200dp"
                                android:layout_height="30dp"
                                android:layout_gravity="left"
                                android:paddingLeft="30dp"
                                android:text="Game Type"
                                android:textSize="15sp" />

                        </LinearLayout> <!--Header text and type text Layout-->

                    </LinearLayout>        <!-- ROW 01 layout END-->
                    <!--   ROW 02 layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                        <ImageView
                            android:id="@+id/game_main_image"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bullwide" />
                    </LinearLayout>        <!-- ROW 02 layout END-->
                    <!--   ROW 03 layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/rating_start_01"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_star" />

                        <ImageView
                            android:id="@+id/rating_start_02"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_star" />

                        <ImageView
                            android:id="@+id/rating_start_03"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_star" />

                        <ImageView
                            android:id="@+id/rating_start_04"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_star" />

                        <ImageView
                            android:id="@+id/rating_start_05"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/vec_star" />

                        <ImageView
                            android:id="@+id/rating_like"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="100dp"
                            android:src="@drawable/vec_dislike" />

                        <ImageView
                            android:id="@+id/rating_dislike"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/vec_like" />
                    </LinearLayout>        <!-- ROW 03 layout END-->
                    <!--   ROW 04 layout  -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/comments"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_black"
                            android:padding="5dp"
                            android:src="@drawable/vec_comments" />

                        <TextView
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:background="@drawable/round_black"
                            android:paddingLeft="10dp"
                            android:text="Leave a comment here"
                            android:textColor="@color/cornflower_blue"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/menu_of_comments"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/round_black"
                            android:padding="5dp"
                            android:src="@drawable/vec_menu" />

                    </LinearLayout>
                </LinearLayout>            <!-- All cards layout END  -->
            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/game_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bulllogo"
                app:shapeAppearanceOverlay="@style/Circular" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView> <!--   Single Card Layout END-->
</androidx.constraintlayout.widget.ConstraintLayout>